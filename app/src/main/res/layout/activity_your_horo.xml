<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".YourHoroActivity">

    <TextView
        android:id="@+id/horoTitle"
        android:layout_width="378dp"
        android:layout_height="84dp"
        android:gravity="center"
        android:text="Your Horoscope:"
        android:textSize="52sp"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/compatibility"
        android:layout_width="383dp"
        android:layout_height="143dp"
        android:gravity="center"
        android:text="This week, you're compatible with:"
        android:textSize="52sp"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horoscopeTxt"
        app:layout_constraintVertical_bias="0.149" />

    <TextView
        android:id="@+id/horoscopeTxt"
        android:layout_width="347dp"
        android:layout_height="153dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="36sp"
        android:textStyle="italic"
        app:fontFamily="sans-serif-condensed-light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horoTitle"
        app:layout_constraintVertical_bias="0.079" />

    <TextView
        android:id="@+id/compatTxt"
        android:layout_width="352dp"
        android:layout_height="102dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="36sp"
        android:textStyle="italic"
        app:fontFamily="sans-serif-condensed-light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compatibility"
        app:layout_constraintVertical_bias="0.246" />
</androidx.constraintlayout.widget.ConstraintLayout>